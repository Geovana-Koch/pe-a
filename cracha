<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script>
    document.addEventListener('DOMContentLoaded', function() {
       
        const crachaInput = document.getElementById('cracha');
        const crachaSaidaInput = document.getElementById('cracha_saida');
        const btnSalvarManual = document.getElementById('btn-salvar-manual');
        const btnFinalizarTreinamento = document.getElementById('btn-finalizar-treinamento');
        
        
        <?php if ($aba_ativa == 'entrada' && isset($crachaInput)): ?>
            crachaInput.focus();
            
            
            crachaInput.addEventListener('change', function() {
                if (this.value.trim() !== '') {
                    this.form.submit();
                }
            });
        <?php endif; ?>
        
       
        <?php if ($aba_ativa == 'saida' && isset($crachaSaidaInput)): ?>
            crachaSaidaInput.focus();
            
            crachaSaidaInput.addEventListener('change', function() {
                if (this.value.trim() !== '') {
                    this.form.submit();
                }
            });
        <?php endif; ?>
        
        
        if (btnSalvarManual) {
            btnSalvarManual.addEventListener('click', function() {
                const nome = document.getElementById('manual_nome').value;
                const cracha = document.getElementById('manual_cracha').value;
                
                if (!nome || !cracha) {
                    alert('Nome e número do crachá são obrigatórios.');
                    return;
                }
                
                
                crachaInput.value = cracha;
                document.querySelector('input[name="modo"]').value = 'adicionar_participante';
                crachaInput.form.submit();
            });
        }
        
        
        if (btnFinalizarTreinamento) {
            btnFinalizarTreinamento.addEventListener('click', function() {
                const modalFinalizar = new bootstrap.Modal(document.getElementById('modalFinalizar'));
                modalFinalizar.show();
            });
        }
        
        
        const formsFinalizarIndividual = document.querySelectorAll('form[action=""][name="modo"][value="finalizar_individual"]');
        formsFinalizarIndividual.forEach(form => {
            form.addEventListener('submit', function(e) {
                if (!confirm('Deseja finalizar para este participante?')) {
                    e.preventDefault();
                }
            });
        });
        
       
        const crachaFields = [crachaInput, crachaSaidaInput];
        crachaFields.forEach(field => {
            if (field) {
                field.addEventListener('keypress', function(e) {
                    if (e.key === 'Enter') {              
                                  
                        e.preventDefault();
                        if (this.value.trim() !== '') {
                            this.form.submit();
                        }
                    }
                });
            }
        });
    });
</script>
</body>
</html>
